{
	"author": "Nishant Kohli",
	"version": "1.0.0",
	"private": true,
	"name": "ads",
	"workspaces": [
		"packages/*"
    ],
    "_moduleAliases": {
        "_nodesrc": "./packages/node-server/src",
        "_models": "./packages/node-server/src/mongo/model",
        "_mongo": "./packages/node-server/src/mongo",
        "_mongoops": "./packages/node-server/src/mongo/ops",
        "_passport": "./packages/node-server/src/passportjs",
        "_routes": "./packages/node-server/src/routes",
        "_graphql": "./packages/node-server/src/graphql",
        "_gqlschema": "./packages/node-server/src/graphql/schema"
    },
	"scripts": {
		"node-server": "cd packages\\node-server && yarn start"
    },
    "devDependencies": {
        "husky": "^4.3.6",
        "lint-staged": "^10.5.3",
        "nodemon": "^2.0.4"
    },
    "dependencies": {
        "prettier": "^2.2.1"
    },
    "husky": {
        "hooks": {
          "pre-commit": "lint-staged"
        }
      },
      "lint-staged": {
        "*.{js, jsx, ts, tsx, md, html}": "prettier --write"
      }
}